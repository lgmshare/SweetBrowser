<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:name=".App"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.SweetBrowser"
        tools:targetApi="31">
        <activity
            android:name="com.comeby.browser.ui.SplashActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.SweetBrowser">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.comeby.browser.ui.PageActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.comeby.browser.ui.PageListActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.comeby.browser.ui.ClearActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.comeby.browser.ui.PrivacyActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.comeby.browser.ui.SettingActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>